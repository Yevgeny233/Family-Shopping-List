<resources>
    <!-- Base application theme. -->
    <style name="Theme.FamilyShoppingList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color</item>

        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.FamilyShoppingList.MainTextStyle" parent="Theme.FamilyShoppingList">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Theme.FamilyShoppingList.SecondTextStyle" parent="Theme.FamilyShoppingList">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>